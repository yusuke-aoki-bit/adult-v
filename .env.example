# Database
# Local development (docker compose up -d):
#   DATABASE_URL=postgresql://postgres:postgres@localhost:5432/adult_v_dev
# Production (GCP PostgreSQL):
#   DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/adult_v_dev

# Redis
# Local development (docker compose up -d):
#   REDIS_URL=redis://localhost:6379
# Production (Upstash):
#   UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
#   UPSTASH_REDIS_REST_TOKEN=xxx
REDIS_URL=redis://localhost:6379

# Site URL
NEXT_PUBLIC_SITE_URL=https://example.com

# ============================================
# Affiliate IDs (Client-side / フロントエンド用)
# ============================================

# DMM/FANZA アフィリエイト
# 登録: https://affiliate.dmm.com/
NEXT_PUBLIC_DMM_AFFILIATE_ID=your_affiliate_id
NEXT_PUBLIC_DMM_AFFILIATE_SITE_ID=your_site_id

# DUGA (APEX) アフィリエイト
# 登録: https://click.duga.jp/
# 形式: 代理店ID-バナーID (例: 12345-01)
NEXT_PUBLIC_DUGA_AFFILIATE_ID=your_agent_id-banner_id

# DTI系サイト アフィリエイト
# 登録: https://affiliate.dti.ne.jp/
# 形式: 9999999-999-999999
NEXT_PUBLIC_DTI_HEYZO_AFFILIATE_ID=
NEXT_PUBLIC_DTI_CARIBBEANCOM_AFFILIATE_ID=
NEXT_PUBLIC_DTI_CARIBBEANCOMPR_AFFILIATE_ID=
NEXT_PUBLIC_DTI_1PONDO_AFFILIATE_ID=

# ============================================
# API Keys (Server-side / サーバー用)
# ============================================

# DMM API (optional)
DMM_API_ID=xxxxx
DMM_AFFILIATE_ID=xxxxx

# MGS API (optional)
MGS_API_KEY=xxxxx

# DUGA (APEX) Web Service API
# 公式ドキュメント: https://duga.jp/aff/member/webservice/
# 利用規約: https://duga.jp/aff/member/html/api-rule.html
# クレジット表示義務: https://duga.jp/aff/member/html/api-credit.html
# レート制限: 60リクエスト/60秒
DUGA_APP_ID=your_duga_app_id
DUGA_AGENT_ID=your_agent_id  # アフィリエイトID (代理店ID)
DUGA_BANNER_ID=01            # バナーID (01～99)

# ソクミル (Sokmil) Affiliate API
# 公式ドキュメント: https://sokmil-ad.com/member/api
# クレジット表示義務: 必須 (すべてのAPI利用サイト・アプリに表示)
SOKMIL_API_KEY=your_sokmil_api_key

# ============================================
# CI Secrets (GitHub Actions only)
# ============================================
# Sentry source map upload
# SENTRY_AUTH_TOKEN=
# SENTRY_ORG=
# SENTRY_PROJECT=
# Lighthouse CI GitHub App
# LHCI_GITHUB_APP_TOKEN=
# Firebase Preview Deploy
# FIREBASE_SERVICE_ACCOUNT=

# Logging
# Levels: debug, info, warn, error, fatal (default: info in production, debug in development)
LOG_LEVEL=debug

# Cache Settings
CACHE_TTL_PRICE=3600
CACHE_TTL_THUMBNAIL=86400
CACHE_TTL_STOCK=1800

# ============================================
# Proxy Settings (Crawler用)
# ============================================
# Residential Proxyを使用してIPブロックを回避
# 推奨サービス: Bright Data, Oxylabs, SOAX, Smartproxy
# 形式: http://user:pass@proxy.example.com:8080
PROXY_ENABLED=false
PROXY_URL=

# Firebase Configuration (optional - enables cloud sync features)
# Get these values from Firebase Console > Project Settings > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=adult-v.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=adult-v
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=adult-v.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Cloud Messaging (optional - for push notifications)
NEXT_PUBLIC_FIREBASE_VAPID_KEY=

# ============================================
# AI/ML API Keys
# ============================================

# OpenAI API (for semantic search embeddings)
# Get API key from: https://platform.openai.com/api-keys
# Model used: text-embedding-3-small (1536 dimensions)
# Pricing: $0.02 per 1M tokens
OPENAI_API_KEY=

# DeepL Translation API (for multi-language support)
# Get API key from: https://www.deepl.com/pro-api
# Free tier (ends with :fx): 500,000 chars/month
# Pro tier: Higher limits
DEEPL_API_KEY=
