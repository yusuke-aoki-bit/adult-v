{
  "name": "adult-v",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@adult-v/web",
    "dev:fanza": "turbo run dev --filter=@adult-v/fanza",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@adult-v/web",
    "build:fanza": "turbo run build --filter=@adult-v/fanza",
    "lint": "turbo run lint",
    "db:generate": "pnpm --filter=@adult-v/database db:generate",
    "db:push": "pnpm --filter=@adult-v/database db:push",
    "crawl:duga": "pnpm --filter=@adult-v/crawlers crawl:duga",
    "crawl:sokmil": "pnpm --filter=@adult-v/crawlers crawl:sokmil",
    "crawl:japanska": "pnpm --filter=@adult-v/crawlers crawl:japanska",
    "crawl:mgs": "pnpm --filter=@adult-v/crawlers crawl:mgs",
    "crawl:fc2": "pnpm --filter=@adult-v/crawlers crawl:fc2",
    "crawl:b10f": "pnpm --filter=@adult-v/crawlers crawl:b10f",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run __tests__",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:web": "playwright test --project=web",
    "test:e2e:fanza": "playwright test --project=fanza",
    "test:e2e:debug": "playwright test --debug",
    "test:a11y": "playwright test e2e/accessibility.spec.ts",
    "test:visual": "playwright test e2e/visual-regression.spec.ts",
    "test:visual:update": "playwright test e2e/visual-regression.spec.ts --update-snapshots",
    "test:api": "playwright test e2e/api-routes.spec.ts",
    "test:all": "npm run test:run && npm run test:e2e"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.32.1",
    "turbo": "^2.7.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/eslintrc": "^3.0.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "jsdom": "^27.3.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  },
  "pnpm": {
    "overrides": {
      "next": "16.0.7",
      "react": "19.2.3",
      "react-dom": "19.2.3"
    }
  }
}
